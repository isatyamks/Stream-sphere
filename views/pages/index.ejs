<% layout('/layout/boilerplate.ejs') %>
<style>
    body {
        background-color: #121212; /* Dark background color */
        color: #fff; /* Light text color */
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card {
        transition: transform 0.3s;
        background-color: #333; /* Dark card background color */
        color: #fff; /* Light text color */
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-title {
        color: #5680cf; /* Light text color */
    }

    .card-text {
        color: #ffffff; /* Lighter text color */
    }
</style>

<body>
    <div class="container mt-5">
        <h3 class="mb-4">Latest Video</h3>
        <div class="row">
            <% allVideos.forEach(video => { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="<%= video.thumbnail %>" class="card-img-top" alt="Thumbnail">
                        <div class="card-body">
                            <h5 class="card-title"><%= video.title %></h5>
                            <p class="card-text">Views: <%= video.views %></p>
                            <p class="card-text">Owner:<%= video.owner.username %></p>
                            <% console.log(video.owner.gmail) %>
                            <% if(!currentUser){%>
                                <a href="/videos/<%= video._id %>" class="btn btn-primary">Watch Video</a>
                                <img src="<%= video.owner.avatar %>" class="rounded-circle" width="40" height="40" alt="Avatar">
                            <%}else{ %>
                                <a href="/user/<%= req.user._id %>1/videos/<%= video._id %>" class="btn btn-primary">Watch Video</a>
                                <img src="<%= video.owner.avatar %>" class="rounded-circle" width="40" height="40" alt="Avatar">
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
