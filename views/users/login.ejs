<% layout('layout/boilerplate') %>

<style>
  /* General body styling */
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #000000;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .container{
    background-color: #000000!important;

  }
  
  /* Main container */
  .login-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 380px;
    padding: 30px;
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.05);
  }

  /* Heading */
  .login-container h1 {
    font-size: 22px;
    margin-bottom: 20px;
    color: #333;
    text-align: center;
    font-weight: 600;
  }

  /* Label for input fields */
  .form-label {
    font-weight: 500;
    font-size: 14px;
    margin-bottom: 5px;
    color: #555;
  }

  /* Input fields */
  .form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
    background-color: #fafafa;
    transition: border-color 0.3s;
    font-size: 14px;
    color: #333;
  }

  .form-control:focus {
    outline: none;
    border-color: #2d9cdb;
  }

  /* Login Button */
  .btn {
    width: 100%;
    padding: 12px;
    border-radius: 5px;
    border: none;
    background-color: #2d9cdb;
    color: white;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #1a82c4;
  }

  /* Center align the form with some spacing */
  .login-container form {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .login-container {
      width: 90%;
    }
  }
</style>

<body>
  <div class="login-container">
    <h1>Login</h1>
    <form class="needs-validation" novalidate method="POST" action="/login">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" required class="form-control" type="text" placeholder="Enter your username" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" required class="form-control" type="password" placeholder="Enter your password" />
      </div>
      <button class="btn" type="submit">Login</button>
    </form>
  </div>
</body>
